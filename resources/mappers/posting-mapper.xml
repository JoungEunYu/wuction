<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="postingMapper">

	<!-- 원하는 객체의 필드에 담아 반환하고자 할 때 사용 -->
	<resultMap type="Posting" id="PostingResultSet">
	<!-- 
		property = "객체 클래스 파일의 필드변수명"
		column = "DB의 해당 컬럼 명"
	 -->
		<result property="postingNo" column="POSTING_NO"></result>	
		<result property="memNo" column="MEM_NO"></result>	
		<result property="categoryNo" column="CATEGORY_NO"></result>	
		<result property="productInfo" column="PRODUCT_INFO"></result>	
		<result property="productName" column="PRODUCT_NAME"></result>	
		<result property="endTime" column="END_TIME"></result>	
		<result property="startTime" column="START_TIME"></result>	
		<result property="startPrice" column="START_PRICE"></result>	
		<result property="bidUnit" column="BID_UNIT"></result>	
		<result property="status" column="STATUS"></result>	
	</resultMap>
	
	
	<insert id="insertPosting" useGeneratedKeys="true" keyProperty="postingNo" keyColumn="POSTING_NO">
		 INSERT INTO POSTING
        (POSTING_NO, MEM_NO, CATEGORY_NO, PRODUCT_INFO, PRODUCT_NAME, END_TIME, START_TIME, START_PRICE, BID_UNIT, STATUS)
    	VALUES
        (PNO_SEQ.NEXTVAL, #{memNo}, #{categoryNo}, #{productInfo}, #{productName}, TO_DATE(#{endTime}, 'YYYY-MM-DD"T"HH24:MI'), SYSDATE, #{startPrice}, #{bidUnit}, 'BID')

	</insert>
	
	<select id="selectPosting" resultMap="PostingResultSet">
		SELECT * 
			FROM POSTING
		WHERE POSTING_NO = #{postingNo}
	</select>
	
	
	
	
</mapper>